<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure File Share</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="hero">
        <div class="hero-content">
            <h1 class="gradient-text">Secure File Transfer</h1>
            <p class="subtitle">End-to-end encrypted file sharing with self-destructing rooms</p>
            
            <div class="upload-card">
                <form action="/upload" method="POST" enctype="multipart/form-data" id="uploadForm">
                    <input type="file" name="files" multiple id="fileInput" hidden>
                    <label for="fileInput" class="upload-label">
                        <div class="upload-box">
                            <i class="fas fa-cloud-upload-alt fa-3x"></i>
                            <h2>Choose Files</h2>
                            <p class="file-limit">Max 5 files free â€¢ 100MB per file</p>
                        </div>
                    </label>
                    <div id="filePreview" class="file-preview"></div>
                    <button type="submit" class="upload-button">
                        <i class="fas fa-lock"></i> Create Secure Room
                    </button>
                </form>
            </div>

            <div class="or-divider">
                <span>or</span>
            </div>

            <div class="access-existing">
                <a href="/join" class="access-button">
                    <i class="fas fa-door-open"></i> Access Existing Room
                </a>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const preview = document.getElementById('filePreview');
            preview.innerHTML = '';
            
            Array.from(this.files).forEach((file, index) => {
                const div = document.createElement('div');
                div.className = 'file-item';
                div.innerHTML = `
                    <span class="file-number">${index + 1}</span>
                    <div class="file-info">
                        <span class="file-name">${file.name}</span>
                        <span class="file-size">${(file.size/1024/1024).toFixed(2)}MB</span>
                    </div>
                    <div class="file-status">
                        <i class="fas fa-check"></i>
                    </div>
                `;
                preview.appendChild(div);
            });
        });
    </script>
</body>
</html>